<h1 class="games-title">GAMES</h1>
<hr>
<div class="editors-choice-games">
  <%Game.where(:editors_choice => true).each do |game|%>
  <a href="/games/<%=game.id%>">
    <div class="game-list-item">

      <div class="img-container">

        <img src="<%= game.pic%>">
        <h3 class="tiny-banner">Editor's Choice</h3>
        <div class="title-game" ><%= game.name%></div>
      </div>

      <h4 class="editors-choice-caption-games"><%= game.caption%></h4>
    </div>
  </a>
  <% end %>







